<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="popupTheme">@style/Theme.AppCompat.Light</item>
        <item name="buttonStyle">@style/buttonWidgetStyle</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/primary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="GalleryTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="buttonWidgetStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:background">@drawable/button_text</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="GroupTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:background">@drawable/horizontal_rule</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <!-- Splash screen -->

    <style name="SplashLogo">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">160dp</item>
        <item name="android:src">@drawable/urfu_logo</item>
    </style>

    <style name="SplashText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Language Activity -->

    <style name="LanguageChooseText">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/choose_lang</item>
        <item name="android:textSize">36sp</item>
        <item name="android:layout_marginTop">48dp</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <style name="LanguageButton">
        <item name="android:layout_width">@dimen/langButtonSize</item>
        <item name="android:layout_height">@dimen/langButtonSize</item>
        <item name="android:layout_marginRight">@dimen/langButtonMargin</item>
        <item name="android:layout_marginBottom">@dimen/langButtonMargin</item>
        <item name="android:background">@drawable/button_lang</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Entry card -->

    <style name="EntryCard" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPaddingBottom">8dp</item>
    </style>

    <style name="EntryCardImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/entry_image</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="EntryCardTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="EntryCardAuthor" parent="EntryCardTitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="EntryCardText" parent="EntryCardTitle">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:lineSpacingExtra">6dp</item>
    </style>

    <style name="EntryCardButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:text">@string/read_more</item>
    </style>

    <style name="DetailText" parent="EntryCardText">
        <item name="android:maxLines">1000</item>
    </style>

    <style name="DetailGalleryTitle" parent="GroupTitle">
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:text">@string/gallery</item>
    </style>

    <style name="DetailGallery">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

</resources>
