<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.santalu.aspectratioimageview.AspectRatioImageView
            android:id="@+id/detailImage"
            style="@style/EntryCardImage"
            android:contentDescription="@string/image_description"
            app:ari_ratio="0.5625" />

        <TextView
            android:id="@+id/detailTitle"
            style="@style/EntryCardTitle"
            android:layout_below="@id/detailImage" />

        <TextView
            android:id="@+id/detailAuthor"
            style="@style/EntryCardAuthor"
            android:layout_below="@id/detailTitle" />

        <TextView
            android:id="@+id/detailText"
            style="@style/DetailText"
            android:layout_below="@id/detailAuthor" />

        <View
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_below="@id/detailText" />
    </RelativeLayout>
</ScrollView>