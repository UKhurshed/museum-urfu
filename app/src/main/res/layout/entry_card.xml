<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView style="@style/EntryCard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.santalu.aspectratioimageview.AspectRatioImageView
                android:id="@+id/entryCardImage"
                style="@style/EntryCardImage"
                android:contentDescription="@string/image_description"
                app:ari_ratio="0.5625" />

            <TextView
                android:id="@+id/entryCardTitle"
                style="@style/EntryCardTitle" />

            <TextView
                android:id="@+id/entryCardAuthor"
                style="@style/EntryCardAuthor" />

            <TextView
                android:id="@+id/entryCardText"
                style="@style/EntryCardText" />

            <Button
                android:id="@+id/entryCardReadMore"
                style="@style/EntryCardButton" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</FrameLayout>